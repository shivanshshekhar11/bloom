extends layout

block content
  h1= title

  if user.status === "user"
    p
      a(href="/membership") Become a Member ...

  unless user.status === "user"  
    p 
      a(href="/users") All Users

  ul#grid
    each post in post_list
      li.grid-items

        p#post-title 
          a(href=post.url) #{post.title}
 
        if post.content.length > 150
          p #{post.content.slice(0,150)} ...

        else 
          p #{post.content.slice(0,150)}

        unless user.status === "user"
            p #[strong By: ]
                a(href=post.author.url) #{post.author.username}

            p#time #{post.ago}

    else
      li There are no posts.