extends layout

block content
  h1= title

  p 
    a(href="/posts/new") Create a new post
    a(href="/logout") Log out

  ul#grid
    each post in post_list
      li.grid-items

        p#post-title 
          a(href=post.url) #{post.title}

        p #{post.content}

        unless user.status === "user"
            p #[strong By: ]
                a(href=post.author.url) #{post.author.username}

            p #{post.time}

    else
      li There are no posts.