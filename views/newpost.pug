extends layout

block content
  h1= title
  
  form(method='POST' action='')

    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='attitude is everything' name='title' required='true' value=(undefined===ptitle ? '' : title) )

    div.form-group
      label(for='content') Content:
      textarea#content.form-control(type='textarea', placeholder='as the name suggests ...' name='content' required='true' rows="10" cols="50") #{undefined===content ? '' : content}

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg