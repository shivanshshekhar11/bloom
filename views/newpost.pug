extends layout

block content
  h1= title
  
  form(method='POST' action='')

    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='attitude is everything' name='title' required='true' value=(undefined===ptitle ? '' : title) )

    div.form-group
      label(for='Content') Content:
      input#content.form-control(type='textarea', placeholder='Count your blessings' name='content' rows="5" cols="20" required='true' value=(undefined===content ? '' : content) )

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg