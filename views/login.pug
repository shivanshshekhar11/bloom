doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/logsign.css')
  body
  h1= title
  
  form(method='POST' action='')

    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='cutiebun7056' name='username' required='true' value=(undefined===username ? '' : username) )

    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password' required='true')

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

  div#footergap
  footer
